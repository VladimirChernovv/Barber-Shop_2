<h2 class="contacts_title">Contacts</h2>

<form action="/contacts" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Email address</label>
    <input id="contacts_email" name="email" type="text" class="form-control" placeholder="name@example.com">
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea id="contacts_textarea" name="user_message" class="form-control" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Send</button>
</form>

<script type="text/javascript">
  $(function () {
    $('#contacts_email').css('background-color', '#FED6BC')
    $('#contacts_textarea').css('background-color', 'plum')
    $('.contacts_title').css('background-color', '#B5F2EA')
  });
</script>